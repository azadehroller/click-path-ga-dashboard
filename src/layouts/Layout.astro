---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Roller Analytics Dashboard' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <slot />
</body>
</html>
